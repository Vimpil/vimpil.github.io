              <mn>222</mn>
              <mo>&#x00B0;</mo>
            </mcos>
          </mrow>
        </mrow>
        <mo>&#x2217;</mo>
        <mrow>
          <mi>ctg</mi>
          <mo>&#x2061;</mo>
